<div class="extendInfo-block">
    <h1 class="m-5">Еще чуть-чуть...</h1>
    <form id="moreInfoUser">
        <div class="login-form-block mb-3">
            <input type="text" class="login-input form-control" placeholder="Имя"/>
        </div>
        <div class="login-form-block mb-3">
            <input type="text" class="login-input form-control" placeholder="Фамилия"/>
        </div>
