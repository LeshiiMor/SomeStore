            <input type="text" id="inp-phone" class="login-input form-control" onchange="EditPhone()" placeholder="Мобильный телефон"/>
        </div>
        <div class="login-form-block mb-3">
            <button type="button" class="btn login-btn" onclick="AddMoreInfoUser()">Сохранить</button>
